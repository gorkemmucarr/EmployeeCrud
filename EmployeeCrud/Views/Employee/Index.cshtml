@model IEnumerable<Employee>


<div>
    <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create</a>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Firstname</th>
            <th scope="col">Lastname</th>
            <th scope="col">Address</th>
            <th scope="col">Departmen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
         <tr>
            <th scope="row">@employee.EmployeeId</th>
            <td>@employee.Firstname</td>
            <td>@employee.Lastname</td>
            <td>@employee.Address</td>
            <td>@employee.Deparment</td>
            <td>
                <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.EmployeeId"
                class="btn btn-success">Details</a>
                    <a asp-controller="Employee" asp-action="Update" asp-route-id="@employee.EmployeeId"
                       class="btn btn-primary">Update</a>
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.EmployeeId"
                       class="btn btn-danger" onclick="return confirm('Are you sure to delete this employee')">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>